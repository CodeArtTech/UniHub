<?xml version="1.0" encoding="utf-8" ?>
<resources>
  <style name="UniHubTheme" parent="MyTheme.Base">
  </style>

  <style name="UniHubTheme.FullScreen" parent="MyTheme.Base">
    <item name="android:windowFullscreen">true</item>
    <item name="android:windowContentOverlay">@null</item>
  </style>

  <style name="MenuTheme" parent="MyTheme.Light">
  </style>

  <style name="Dialog">
    <item name="android:textColorPrimary">#212121</item>
    <item name="android:textColor">#000000</item>
  </style>

  <style name="NavigationTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="windowNoTitle">true</item>
    <item name="windowActionBar">false</item>
    <item name="android:textColorPrimary">@color/white</item>
    <item name="android:textColorSecondary">@color/gray</item>
  </style>

  <style name="NavigationThemeLight" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="windowNoTitle">true</item>
    <item name="windowActionBar">false</item>
    <item name="colorControlHighlight">@color/blue</item>
  </style>

  <!-- Base theme applied no matter what API -->
  <style name="MyTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
    <item name="windowNoTitle">true</item>
    <item name="windowActionBar">false</item>
    <item name="colorPrimary">#2196F3</item>
    <item name="android:textColor">#FFFFFF</item>
    <item name="android:textColorPrimary">#FFFFFF</item>
    <item name="android:textColorSecondary">#FFFFFF</item>
    <item name="android:windowActionBarOverlay">true</item>
    <item name="windowActionBarOverlay">true</item>
    <item name="android:windowAnimationStyle">@style/UniHubActivityAnimations</item>
  </style>

  <style name="MyTheme.Light" parent="Theme.AppCompat.Light">
    <item name="windowNoTitle">true</item>
    <item name="windowActionBar">false</item>
    <item name="colorPrimary">#2196F3</item>
    <item name="android:textColor">#000000</item>
    <item name="android:textColorPrimary">#000000</item>
    <item name="android:windowActionBarOverlay">true</item>
    <item name="windowActionBarOverlay">true</item>
  </style>

  <!-- Standard animations for a full-screen window or activity. -->
  <style name="UniHubActivityAnimations" parent="@android:style/Animation.Activity">
    <item name="android:activityOpenEnterAnimation">@anim/ZoomIn</item>
    <item name="android:activityOpenExitAnimation">@anim/ZoomOut</item>
    
    <item name="android:activityCloseEnterAnimation">@anim/ZoomIn</item>
    <item name="android:activityCloseExitAnimation">@anim/ZoomOut</item>
    
    <item name="android:taskOpenEnterAnimation">@anim/ZoomIn</item>
    <item name="android:taskOpenExitAnimation">@anim/ZoomOut</item>
    
    <item name="android:taskCloseEnterAnimation">@anim/ZoomIn</item>
    <item name="android:taskCloseExitAnimation">@anim/ZoomOut</item>
    
    <item name="android:taskToFrontEnterAnimation">@anim/ZoomIn</item>
    <item name="android:taskToFrontExitAnimation">@anim/ZoomOut</item>
    
    <item name="android:taskToBackEnterAnimation">@anim/ZoomIn</item>
    <item name="android:taskToBackExitAnimation">@anim/ZoomOut</item>
    
    <item name="android:wallpaperOpenEnterAnimation">@anim/ZoomIn</item>
    <item name="android:wallpaperOpenExitAnimation">@anim/ZoomOut</item>
    
    <item name="android:wallpaperCloseEnterAnimation">@anim/ZoomIn</item>
    <item name="android:wallpaperCloseExitAnimation">@anim/ZoomOut</item>
    
    <item name="android:wallpaperIntraOpenEnterAnimation">@anim/ZoomIn</item>
    <item name="android:wallpaperIntraOpenExitAnimation">@anim/ZoomOut</item>
    
    <item name="android:wallpaperIntraCloseEnterAnimation">@anim/ZoomIn</item>
    <item name="android:wallpaperIntraCloseExitAnimation">@anim/ZoomOut</item>
  </style>
</resources>